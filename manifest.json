{
  "manifest_version": 3,
  "name": "Secure Form Autofill",
  "version": "1.0",
  "description": "Securely autofill forms using locally stored PII and LLM assistance",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "public/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/types.js", "src/content.js"]
    }
  ]
}
