{
  "manifest_version": 3,
  "name": "Secure Form Autofill",
  "version": "1.0",
  "description": "Securely autofill forms using locally stored PII and LLM assistance",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "public/popup.html"
  },
  "background": {
    "scripts": ["src/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/utils/browser-polyfill.js", "src/types.js", "src/content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "formulate@example.com",
      "strict_min_version": "109.0"
    }
  }
}
